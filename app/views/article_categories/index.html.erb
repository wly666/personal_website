<div class="container">
  <h1 align="center">文章分类</h1>
  <table class="table table-striped table-hover">
    <tr>
      <th>分类名字</th>
      <th>创建时间</th>
      <th>修改时间</th>
      <th>操作</th>
    </tr>
    <% @article_categories.each do |article_category| %>
      <tr>
        <td><%=link_to article_category.name, articles_path(:article_category_id=>article_category.id), :class=>"btn btn-link" %></td>
        <td><%= article_category.created_at.strftime('%Y-%m-%d')%></td>
        <td><%= article_category.updated_at.strftime('%Y-%m-%d')%></td>
        <td>
          <%= link_to "编辑", edit_article_category_path(:id=>article_category.id), :class=>"btn btn-primary"%>
          <%= link_to "删除", article_category_path(:id=>article_category.id), :method=>"delete",:data=>{:confirm=>"确定要删除这个分类吗?"}, :class=>"btn btn-danger"%>
        </td>
      </tr>
    <%end%>
  </table>
  <%=link_to "新增", new_article_category_path, :class=>"btn btn-primary"%>
  <%=link_to "统计图", cartogram_articles_path, :class=>"btn btn-primary"%>
  <div class="table-actions-bottom" style="float:right">
    <%= paginate @article_categories%>
  </div>
</div>
