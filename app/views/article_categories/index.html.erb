<h1>文章分类</h1>
<table>
  <tr>
    <th>分类名字</th>
    <th>创建时间</th>
    <th>修改时间</th>
    <th>操作</th>
  </tr>
  <% @article_categories.each do |article_category| %>
    <tr>
      <td><%=link_to article_category.name, articles_path(:article_category_id=>article_category.id) %></td>
      <td><%= article_category.created_at %></td>
      <td><%= article_category.updated_at %></td>
      <td>
        <%= link_to "编辑", edit_article_category_path(:id=>article_category.id)%>
        <%= link_to "删除", article_category_path(:id=>article_category.id), :method=>"delete",:data=>{:confirm=>"确定要删除这个分类吗?"}%>
      </td>
    </tr>
  <%end%>
</table>
<%=link_to "新增一个分类", new_article_category_path%>
