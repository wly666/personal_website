<%= form_for @article do |f|%>
  <%= f.hidden_field :article_category_id, :value=>"article_category_id" %>
  请输入文章标题： <%= f.text_field :title%><br/>
  请输入文章内容： <%= f.cktext_area :content%><br/>
  请输入作者：<%= f.text_field :author%><br/>
  文章分类：<%#select_tag "article_category_id",options_from_collection_for_select(ArticleCategory.all,'id','name')%>
  <%= f.text_field :article_category_id, :value=>params[:article_category_id]%><br/>
  请输入文章创建时间： <%= f.text_field :created_at%><br/>
  请输入文章修改时间：<%= f.text_field :updated_at%><br/>
  <%= f.submit "确定"%>
<%end%>
