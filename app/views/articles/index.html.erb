<div class="container">
  <h1 align="center">文章列表</h1>
  <table class="table table-striped table-hover">
    <tr>
      <th>标题</th>
      <th>作者邮箱</th>
      <th>文章创建时间</th>
      <th>文章修改时间</th>
      <th>操作</th>
      <th>点击量</th>
    </tr>
    <% @articles.each do |article|%>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.user.email %></td>
        <td><%= article.created_at.strftime('%Y-%m-%d')%></td>
        <td><%= article.updated_at.strftime('%Y-%m-%d')%></td>
        <td>
          <%= link_to "修改", edit_article_path(:id=>article.id, :article_category_id=>params[:article_category_id]),:class=>"btn btn-primary"%>
          <%= link_to "删除", article_path(:id=>article.id,:article_category_id=>params[:article_category_id]), :method=>"delete", :data=>{:confirm=>"确定要删除这篇文章吗?"},:class=>"btn btn-danger"%>
        </td>
        <td>
          <%= article.amount%>
        </td>
      </tr>
    <%end%>
  </table>
  <%= link_to "新增", new_article_path(:article_category_id=> params[:article_category_id]), :class=>"btn btn-primary"%>
  <%= link_to "返回", article_categories_path, :class=>"btn btn-primary"%>
  <div class="table-actions-bottom" style="float:right">
    <%= paginate @articles%>
  </div>
</div>
