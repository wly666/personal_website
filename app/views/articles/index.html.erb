<div class="container">
  <h1 align="center">文章列表</h1>
  <table class="table table-striped table-hover">
    <tr>
      <th>标题</th>
      <th>作者</th>
      <th>文章创建时间</th>
      <th>文章修改时间</th>
      <th>操作</th>
    </tr>
    <% @articles.each do |article|%>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.author %></td>
        <td><%= article.created_at %></td>
        <td><%= article.updated_at %></td>
        <td>
          <%= link_to "修改", edit_article_path(:id=>article.id, :article_category_id=>params[:article_category_id]),:class=>"btn btn-primary"%>
          <%= link_to "删除", article_path(:id=>article.id), :method=>"delete", :data=>{:confirm=>"确定要删除这篇文章吗?"},:class=>"btn btn-danger"%>
        </td>
      </tr>
    <%end%>
  </table>
  <%# link_to "新增文章", new_article_path(:article_category_id=>@article.article_category_id)%>
  <%# link_to "新增文章", new_article_path(:article_category_id=>@articles.first.article_category_id)%>
  <%= link_to "新增", new_article_path(:article_category_id=> params[:article_category_id]), :class=>"btn btn-primary"%>
  <%# link_to "新增文章", new_article_path, {:controller=>"articles",:action=>"new",:article_category_id=>@article.article_category_id}%>
</div>
